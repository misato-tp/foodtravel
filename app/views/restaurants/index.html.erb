<%= link_to "新しいお店をみんなに知らせる", new_restaurant_path, data: {"turbolinks" => false} %>
<%= link_to "決めてもらう", restaurant_path(Restaurant.offset(rand(Restaurant.count)).first) %>
<%= link_to "現在周辺のお店を探す", search_restaurant_restaurants_path, data: {"turbolinks" => false} %>
<br>
# 新しく加えられた順に表示したい
<% @restaurants.each do |r| %>
  <table>
      <tr>
          <td><%= r.name %></td>
          <td><%= r.postal_code %></td>
          <td><%= r.address %></td>
          <td><%= r.memo %></td>
          <td><%= r.country.name %></td>
          <td><%= link_to "詳細", r, data: {"turbolinks" => false} %></td>
      </tr>
  </table>
<% end %>