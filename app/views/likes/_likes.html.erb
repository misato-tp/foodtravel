<div class="likes_buttons">
<% if user_signed_in? %>
  <% if current_user.liked_by?(restaurant.id) %>
    <%= link_to like_path(restaurant.id, current_user.likes.find_by(restaurant_id: restaurant.id).id), method: :delete do %>
      <p class="like-button"><i class="fas fa-heart fa-2x" style="color: #e82a2a;"></i><span style="color: #e82a2a"></span></p>
    <% end %>
  <% else %>
    <%= link_to likes_path(restaurant.id), method: :post do %>
      <p class="like-button"><i class="far fa-heart fa-2x" style="color: #e82a2a;"></i><span style="color: #e82a2a"></span></p>
    <% end %>
  <% end %>
<% end %>
</div>
