<div class="container p-4">
  <h1 class="page-title text-dark text-center text-uppercase fw-lighter mt-4">new password</h1>
  <h5 class="page-title text-dark text-center pb-4">パスワードの再設定</h5>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%= f.label :password, "新しいパスワード" %><span class="text-danger"> ※必須</span><br>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "6文字以上で入れてください", class: "form-control" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, "確認用パスワード" %><span class="text-danger"> ※必須</span><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワードをもう一度入れてください", class: "form-control" %>
    </div>

    <div class="action mb-3 d-flex justify-content-end">
      <%= f.submit "パスワードを更新する", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>