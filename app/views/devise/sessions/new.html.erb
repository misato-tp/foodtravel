<div class="form-signin w-100 m-auto">
  <%= image_tag "logo_black.png", alt: "logo", class: "mt-4", width: 100, height: 100 %>
  <h1 class="h3 mb-3 fw-normal">ログイン</h1>
    <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="form-floating">
      <%= f.text_field :username, class: "form-control", id: "floationgInput", placeholder: "Username", type: "username" %>
      <label for="floatingInput">ユーザー名</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", type: "password" %>
      <label for="floatingPassword">パスワード</label>
    </div>

    <div class="form-check text-start my-3">
      <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault" %>
      <label class="form-check-label" for="flexCheckDefault">
        パスワードを保存
      </label>
    </div>
    <%= f.submit "ログイン", class: "btn btn-primary w-100 py-2" %>
    <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
    <% end %>
</div>

<%= render "devise/shared/links" %>
<%= link_to '今すぐ見てみる(ゲストログイン)', users_guest_sign_in_path, method: :post %>

