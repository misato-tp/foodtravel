<%= render "devise/shared/error_messages", resource: resource %>
<div class="container p-4">
  <h1 class="page-title text-dark text-center text-uppercase fw-lighter mt-4">edit</h1>
  <h5 class="page-title text-dark text-center">編集</h5>
  <%= link_to :back, class:"btn btn-dark mb-3" do %>
    <i class="bi bi-arrow-left"></i>一つ前に戻る
  <% end %>
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <div class="field mb-3">
      <%= f.label :username %><span class="text-danger"> ※必須</span><br>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "username form-control" %>
    </div>
  
    <div class="field mb-3">
      <%= f.label :email %><span class="text-danger"> ※必須</span><br />
      <%= f.email_field :email, autocomplete: "email", class: "email form-control" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>次のアドレスで確認メールの再送信が保留中です: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field mb-3">
      <%= f.label :profile_image %><br />
      <%= f.file_field :profile_image, class: "form-control" %>
    </div>
    <div id="preview-image" class="mb-3"><%= image_tag @user.profile_image.url if @user.profile_image? %></div>
  
    <div class="action mb-3 d-flex justify-content-end">
      <%= f.submit "更新", class:"btn btn-primary col-md-3" %>
    </div>
  <% end %>
  <hr>
  <h3 class="mt-4 mb-4"><i class="bi bi-exclamation-triangle-fill"></i>アカウントを削除する</h3>
  <%= link_to registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか？", turbo_confirm: "本当に削除してよろしいですか？" }, method: :delete do %>
    <button class="btn btn-primary"><i class="bi bi-hand-thumbs-down"></i>退会したい方はクリック</button>
  <% end %>
</div>