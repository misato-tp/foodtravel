<%= render "devise/shared/error_messages", resource: resource %>
<div class="form-signup w-100 m-auto">
  <%= image_tag "logo_black.png", alt: "logo", class: "mt-4 d-block mx-auto", width: 100, height: 100 %>
  <h1 class="h3 mb-3 fw-normal text-center">新規アカウント作成</h1>
  <hr>
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <div class="form-floating">
      <%= f.text_field :username, class: "form-control", id: "floatingUsername", placeholder: "Username", type: "username" %>
      <label for="floatingUsername">ユーザー名</label>
    </div>
    <div class="form-floating">
      <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "Email", type: "email" %>
      <label for="floatingEmail">メールアドレス</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", type: "password" %>
      <label for="floatingPassword">パスワード(6文字以上)</label>
    </div>
    <div class="form-floating">
      <%= f.password_field :confirm_password, class: "form-control", id: "floatingConfirmPassword", placeholder: "ConfirmPassword", type: "password" %>
      <label for="floatingConfirmPassword">パスワード(確認用)</label>
    </div>
    <%= f.submit "登録", class: "btn btn-primary w-100 py-2" %>
  <% end %>
  <hr>
  <div class="loginLink">
    <%= link_to "アカウントをお持ちの方はこちら", new_session_path(resource_name), class: "link", data: {"turbolinks" => false} %>
  </div>
</div>
